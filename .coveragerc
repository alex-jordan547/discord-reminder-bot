# Configuration Coverage pour Discord Reminder Bot

[run]
source = .
omit = 
    tests/*
    */tests/*
    venv/*
    .venv/*
    */venv/*
    */.venv/*
    htmlcov/*
    scripts/*
    build/*
    dist/*
    src/*
    node_modules/*
    .git/*
    temp_*
    *.pyc
    __pycache__/*
    */migrations/*
    staging_environment/*

branch = true
parallel = true

[report]
# Objectif de couverture: 90%
precision = 2
show_missing = true
skip_covered = false
sort = Cover

# Exclure les lignes qui ne peuvent pas être testées
exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstract

[html]
directory = htmlcov
title = Discord Reminder Bot - Coverage Report

[xml] 
output = coverage.xml