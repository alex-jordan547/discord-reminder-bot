# Token du bot Discord (obligatoire)
DISCORD_TOKEN=your_bot_token_here

# Intervalle entre les rappels automatiques (défaut: 24 heures)
# Exemples :
#   0.05 = 3 minutes (pour tests rapides)
#   0.1  = 6 minutes  
#   0.25 = 15 minutes
#   0.5  = 30 minutes
#   1    = 1 heure
#   24   = 24 heures (défaut)
REMINDER_INTERVAL_HOURS=24

# Rôles autorisés à gérer le bot (défaut: Admin,Moderateur,Coach)
ADMIN_ROLES=Admin,Moderateur,Coach

# Utiliser un canal séparé pour les rappels? (défaut: false)
# false = rappels dans le même canal que le match
# true = rappels dans un canal dédié
USE_SEPARATE_REMINDER_CHANNEL=false

# Nom du canal de rappels si USE_SEPARATE_REMINDER_CHANNEL=true (défaut: rappels-matchs)
REMINDER_CHANNEL_NAME=rappels-matchs