# ===== CONFIGURATION DE TEST =====
# Fichier de configuration spécifique aux tests
# Force l'utilisation d'une base de données en mémoire pour isoler les tests

NODE_ENV=test
DATABASE_PATH=:memory:
DATABASE_NAME=:memory:

# Configuration de logging pour les tests
LOG_LEVEL=INFO
LOG_TO_FILE=false

# Désactive certaines fonctionnalités pendant les tests
AUTO_DELETE_REMINDERS=false
SQLITE_MONITORING_ENABLED=false
SQLITE_BACKUP_ENABLED=false
