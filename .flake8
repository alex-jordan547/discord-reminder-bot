# Flake8 configuration for Discord Reminder Bot
[flake8]

# Maximum line length
max-line-length = 100

# Ignore specific error codes
ignore = 
    E203,
    W503,
    E501

# Exclude directories and files from checking
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    logs

# Maximum cyclomatic complexity
max-complexity = 15

# Per-file ignores
per-file-ignores =
    __init__.py:D104,F401