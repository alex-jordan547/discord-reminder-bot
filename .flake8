# Flake8 configuration for Discord Reminder Bot
[flake8]

# Maximum line length
max-line-length = 100

# Ignore specific error codes
ignore = 
    E203,  # whitespace before ':' (conflicts with black)
    W503,  # line break before binary operator (conflicts with black)
    E501,  # line too long (handled by black)

# Exclude directories and files from checking
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    logs

# Import order styling
import-order-style = google

# Application import names (for import order checking)
application-import-names = 
    models,
    persistence,
    commands,
    utils,
    config

# Maximum cyclomatic complexity
max-complexity = 15

# Docstring conventions
docstring-convention = google

# Enable specific plugins
select = 
    E,      # pycodestyle errors
    W,      # pycodestyle warnings
    F,      # pyflakes
    C,      # mccabe complexity
    B,      # flake8-bugbear
    C4,     # flake8-comprehensions
    D,      # flake8-docstrings
    I,      # flake8-import-order

# Per-file ignores (if needed)
per-file-ignores =
    __init__.py:D104,F401  # Missing docstring in public package, imported but unused