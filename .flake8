# Flake8 configuration for Discord Reminder Bot
[flake8]
# Maximum line length - même que Black
max-line-length = 88

# Ignorer les conflits connus avec Black et autres règles trop strictes
ignore = E203,W503,E501,W504,E402,D212,D200,I201,B007,C901

# Exclude directories and files from checking
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.pyc,
    *.egg-info,
    .eggs,
    tests

# Complexité maximale autorisée
max-complexity = 18

# Style des docstrings
docstring-convention = google

# Statistiques
statistics = True

# Configuration import-order
application-import-names = bot,commands,config,models,persistence,utils
import-order-style = pycharm
