{
  "name": "discord-reminder-bot",
  "version": "2.0.0",
  "description": "Discord bot for event reminder management with reaction tracking",
  "main": "dist/src/bot.js",
  "type": "module",
  "imports": {
    "#/*": "./src/*"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "start": "node dist/src/bot.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:performance": "vitest --run tests/**/*performance*",
    "test:regression": "vitest --run tests/**/*regression*",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:strict": "eslint src --max-warnings 0",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit --strict",
    "quality:all": "npm run lint:strict && npm run format:check && npm run type-check:strict && npm run test:coverage",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "docker:build": "docker build -t discord-reminder-bot .",
    "docker:run": "docker-compose up",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop"
  },
  "keywords": [
    "discord",
    "bot",
    "reminder",
    "event",
    "scheduler",
    "typescript",
    "node"
  ],
  "author": "Alex Jordan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alex-jordan547/discord-reminder-bot.git"
  },
  "bugs": {
    "url": "https://github.com/alex-jordan547/discord-reminder-bot/issues"
  },
  "homepage": "https://github.com/alex-jordan547/discord-reminder-bot#readme",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.3.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.5",
    "fastify": "^4.24.3",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^0.34.6",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vitest": "^0.34.6"
  },
  "packageManager": "yarn@1.22.22"
}
