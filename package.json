{
  "name": "discord-reminder-bot",
  "version": "2.0.0",
  "description": "Discord bot for event reminder management with reaction tracking",
  "main": "dist/index.js",
  "type": "module",
  "imports": {
    "#/*": "./src/*"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:build": "concurrently -n \"build,bot\" -c \"cyan,green\" \"vite build --config vite.config.dev.ts --watch\" \"nodemon --watch dist/dev --delay 2 dist/dev/index.js\"",
    "dev:direct": "tsx src/index.ts",
    "start": "node dist/index.js",
    "build": "vite build",
    "build:dev": "vite build --config vite.config.dev.ts",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "quality": "yarn lint && yarn format:check && yarn type-check && yarn test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:backup": "./scripts/backup-db.sh",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:restart": "docker-compose restart",
    "docker:rebuild": "yarn db:backup && docker-compose up --build -d",
    "docker:logs": "docker-compose logs -f",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "discord",
    "bot",
    "reminder",
    "event",
    "scheduler",
    "typescript",
    "node"
  ],
  "author": "Alex Jordan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alex-jordan547/discord-reminder-bot.git"
  },
  "bugs": {
    "url": "https://github.com/alex-jordan547/discord-reminder-bot/issues"
  },
  "homepage": "https://github.com/alex-jordan547/discord-reminder-bot#readme",
  "dependencies": {
    "@fastify/cors": "^9.0.0",
    "@fastify/rate-limit": "^9.0.0",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.3.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.5",
    "fastify": "^4.24.3",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^0.34.6",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vite-plugin-node-polyfills": "^0.21.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.6"
  },
  "packageManager": "yarn@1.22.22"
}
