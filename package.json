{
  "name": "discord-reminder-bot",
  "version": "2.0.0",
  "description": "Discord bot for event reminder management with reaction tracking",
  "main": "dist/index.js",
  "type": "module",
  "imports": {
    "#/*": "./src/*"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "dev": "concurrently -n \"server,client\" -c \"cyan,green\" \"yarn dev:server\" \"yarn dev:client\"",
    "dev:server": "cd server && yarn dev",
    "dev:client": "cd client && yarn dev",
    "dev:server-only": "cd server && yarn dev",
    "dev:client-only": "cd client && yarn dev",
    "start": "cd server && npm start",
    "build": "yarn build:shared && yarn build:server",
    "build:full": "yarn build:shared && yarn build:server && yarn build:client",
    "build:shared": "cd shared && yarn build",
    "build:server": "cd server && yarn build",
    "build:client": "cd client && yarn build",
    "clean": "rm -rf server/dist client/dist shared/dist",
    "test": "yarn test:server && yarn test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "test:watch": "concurrently -n \"server,client\" -c \"cyan,green\" \"cd server && yarn test:watch\" \"cd client && yarn test:watch\"",
    "test:coverage": "yarn test:server -- --coverage && yarn test:client -- --coverage",
    "lint": "yarn lint:shared && yarn lint:server && yarn lint:client",
    "lint:shared": "cd shared && yarn lint",
    "lint:server": "cd server && yarn lint",
    "lint:client": "cd client && yarn lint",
    "lint:fix": "yarn lint:shared -- --fix && yarn lint:server -- --fix && yarn lint:client -- --fix",
    "format": "prettier --write \"**/*.{ts,vue,js,json}\"",
    "format:check": "prettier --check \"**/*.{ts,vue,js,json}\"",
    "type-check": "yarn type-check:shared && yarn type-check:server && yarn type-check:client",
    "type-check:shared": "cd shared && yarn type-check",
    "type-check:server": "cd server && yarn type-check",
    "type-check:client": "cd client && yarn type-check",
    "quality": "yarn lint && yarn format:check && yarn type-check && yarn test",
    "install:all": "yarn install && cd server && yarn install && cd ../client && yarn install && cd ../shared && yarn install",
    "db:generate": "cd server && yarn db:generate",
    "db:migrate": "cd server && yarn db:migrate",
    "db:studio": "cd server && yarn db:studio",
    "db:migrate:manual": "node scripts/apply-migrations.js",
    "db:backup": "./scripts/backup-db.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:migrate": "docker compose --profile migration up db-migration",
    "test:docker": "playwright test --config=playwright-infrastructure.config.ts"
  },
  "keywords": [
    "discord",
    "bot",
    "reminder",
    "event",
    "scheduler",
    "typescript",
    "node"
  ],
  "author": "Alex Jordan",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/alex-jordan547/discord-reminder-bot.git"
  },
  "bugs": {
    "url": "https://github.com/alex-jordan547/discord-reminder-bot/issues"
  },
  "homepage": "https://github.com/alex-jordan547/discord-reminder-bot#readme",
  "dependencies": {
    "@fastify/cors": "^9.0.0",
    "@fastify/rate-limit": "^9.0.0",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.3.0",
    "chart.js": "^4.4.0",
    "discord.js": "^14.22.1",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.6.0",
    "pg": "^8.16.3",
    "pinia": "^2.1.0",
    "vue": "^3.4.0",
    "vue-chartjs": "^5.3.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.8.10",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vue/test-utils": "^2.4.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "jsdom": "^24.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "redis": "^4.7.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vite-plugin-node-polyfills": "^0.21.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.6"
  },
  "packageManager": "yarn@1.22.22"
}
