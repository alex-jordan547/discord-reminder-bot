
{
  "name": "discord-reminder-bot-server",
  "version": "2.0.0",
  "description": "Discord bot server with API and database management",
  "main": "dist/index.js",
  "type": "module",
  "imports": {
    "#/*": "./src/*"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:build": "concurrently -n \"build,bot\" -c \"cyan,green\" \"vite build --config vite.config.ts --watch\" \"nodemon --watch dist --delay 2 dist/index.js\"",
    "dev:direct": "tsx src/index.ts",
    "start": "node dist/index.js",
    "build": "vite build",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:backup": "../scripts/backup-db.sh"
  },
  "dependencies": {
    "@fastify/cookie": "^9.1.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/websocket": "^8.3.1",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.3.0",
    "discord.js": "^14.22.1",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.6.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "redis": "^4.7.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/eslint": "^9.6.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.10",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^0.34.6",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^5.0.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-dts": "^3.0.0",
    "vite-plugin-node-polyfills": "^0.21.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.6"
  }
}
